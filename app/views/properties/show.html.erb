<h1><%= @property.title %></h1>
<p><%= @property.description %></p>
<p>Tipo: <%=@property.property_type.name %></p>
<p>Região: <%= @property.property_location.name %></p>
<p>Quartos: <%= @property.rooms %></p>
<p>Banheiros: <%= @property.bathrooms %></p>

<% if @property.pets %>
    <p>Aceita Pets: Sim</p>
<% else %> 
    <p>Aceita Pets: Não</p>
<% end %>
<% if @property.parking_slot %>
    <p>Estacionamento: Sim</p>
<% else %> 
    <p>Estacionamento: Não</p>
<% end %>
<p>Diária: <%= number_to_currency(@property.daily_rate, unit: 'R$', separator: ',', format: "%u %n") %></p>

<%= link_to 'Editar Imóvel', edit_property_path(@property) %>
<%= link_to 'Voltar', root_path %>
